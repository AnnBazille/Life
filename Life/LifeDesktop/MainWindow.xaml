<Window x:Class="LifeDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LifeDesktop"
        mc:Ignorable="d"
        Title="Conway's Game of Life" SizeToContent="WidthAndHeight">
    <StackPanel Margin="10">
        <TextBlock Margin="10" MaxWidth="500" TextWrapping="Wrap">The Game of Life, also known simply as Life, is a cellular automaton devised by the British mathematician John Horton Conway in 1970.</TextBlock>
        <Button Name="btnOk" Margin="10" Padding="5" Background="White" BorderBrush="Black" Click="btnOk_Click">Start New Simulation Epxeriment</Button>
    </StackPanel>
</Window>
