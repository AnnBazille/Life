<Window x:Class="WPFPrinterLibrary.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFPrinterLibrary"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight">
    <StackPanel Orientation="Horizontal" Margin="10">
        <TextBlock Name="lbMessage" Margin="10" TextWrapping="Wrap" MaxWidth="1000" VerticalAlignment="Center"></TextBlock>
        <Button Name="btnOk" Margin="10" Padding="5" Background="White" BorderBrush="Black" Click="btnOk_Click">OK</Button>
    </StackPanel>
</Window>
